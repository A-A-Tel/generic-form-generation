{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",
    "strict": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "isolatedModules": true,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "generic-form-generation": ["src"]
    }
  },
  "include": [
    "src",
    "demo"
  ]
}
